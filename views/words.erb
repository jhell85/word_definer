<div class='container'>
  <div class="mt-5 d-flex justify-content-end">
    <a href="/words/new"><button class="btn btn-success text-right">Add Word</button></a>
  </div>
</div>
<% if @words.any? %>
  <h2 class="text-center mt-5">Click a word to see it's definition</h2>
  <ol>
  <% @words.each do |word|%>
    <li class="text-center"><a href="/words/<%= word.id %>"><h3><%= word.name %></h3></a></li>
  <% end %>
  </ol>
<% else%>
<div class='container'>
  <div class="mt-1 d-flex justify-content-end">
    <img src="https://media.giphy.com/media/M9HhVYxZRC3Dctc1S8/giphy.gif" width="100" height="42">
  </div>
</div>
  <h3 class="text-center"> add some words to your list </h3>
<% end %>